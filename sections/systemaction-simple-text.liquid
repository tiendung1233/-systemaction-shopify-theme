{% style %} 
    .section-{{ section.id }}--sys-simple-text {
       background-color: {{ section.settings.color_bg }};
    }
    #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text {
        padding-top: {{ section.settings.padding_top_mob }}px;
        padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
    @media (min-width: 768px) {
        #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}
<div class="section-{{ section.id }}--sys-simple-text sys-simple__text">
    <div class="sys-simple-text--content {{ section.settings.desktop_content_position }} {% if request.page_type == 'collection' %}collection{% endif %}">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'heading' %}
                    {% style %} 
                        #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .block-{{ block.id }}-sys-simple_text--heading {
                            color: {{ block.settings.color_text_title }};
                            font-size: {{ block.settings.font_size_title_mb }}px;
                        }
                        #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .block-{{ block.id }}-sys-simple_text--heading * {
                            color: {{ block.settings.color_text_title }};
                            font-size: {{ block.settings.font_size_title_mb }}px;
                        }
                        @media (min-width: 768px) {
                            #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .block-{{ block.id }}-sys-simple_text--heading {
                                font-size: {{ block.settings.font_size_title }}px;
                            }
                            #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .block-{{ block.id }}-sys-simple_text--heading *{
                                font-size: {{ block.settings.font_size_title }}px;
                            }
                        }
                    {% endstyle %}
                    {% if block.settings.font_size_title > 14 %}
                        {% style %} 
                            #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .block-{{ block.id }}-sys-simple_text--heading {
                                line-height: normal;
                            }
                        {% endstyle %}
                    {% endif %}
                    {% if block.settings.heading != blank %}
                        <div class="block-{{ block.id }}-sys-simple_text--heading heading-title title-seo">
                            {{ block.settings.heading }}
                        </div>
                    {% endif %}
                    {%  when 'subtitle' %}
                        {% style %} 
                            #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .block-{{ block.id }}-sys-simple_text--subtitle * {
                                color: {{ block.settings.color_text_subtitle }};
                                font-size: {{ block.settings.font_size_subtitle_mb }}px;
                            }
                            @media (min-width: 768px) {
                                #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .block-{{ block.id }}-sys-simple_text--subtitle *{
                                    font-size: {{ block.settings.font_size_subtitle }}px;
                                }
                            }
                        {% endstyle %}
                        {% if block.settings.subtitle != blank %}
                            <div class="block-{{ block.id }}-sys-simple_text--subtitle heading-subtitle subtitle-seo">     
                                {{ block.settings.subtitle }}
                            </div>
                        {% endif %}
                    {% when 'description' %}
                    {% if block.settings.description != blank %}
                        {% if block.settings.font_size_content_mb > 24 %}
                            {% style %} 
                                #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .sys-simple_text--description-wrapper .block-{{ block.id }}-sys-simple_text--description-item {
                                    line-height: normal;
                                }
                            {% endstyle %}
                        {% endif %}
                        {% if block.settings.font_size_content > 32 %}
                            {% style %}
                                @media (min-width: 768px) {
                                    #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .sys-simple_text--description-wrapper .block-{{ block.id }}-sys-simple_text--description-item {
                                        line-height: normal;
                                    }
                                }
                            {% endstyle %}
                        {% endif %}
                        {% style %} 
                            #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .sys-simple_text--description-wrapper .block-{{ block.id }}-sys-simple_text--description-item {
                                color: {{ block.settings.color_text_content }};
                                font-size: {{ block.settings.font_size_content_mb }}px;
                            }
                            #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .sys-simple_text--description-wrapper .block-{{ block.id }}-sys-simple_text--description-item * {
                                color: {{ block.settings.color_text_content }};
                                font-size: {{ block.settings.font_size_content_mb }}px;
                            }
                            @media (min-width: 768px) {
                                #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .sys-simple_text--description-wrapper .block-{{ block.id }}-sys-simple_text--description-item {
                                    font-size: {{ block.settings.font_size_content }}px;
                                }
                                #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .sys-simple_text--description-wrapper .block-{{ block.id }}-sys-simple_text--description-item * {
                                    font-size: {{ block.settings.font_size_content }}px;
                                }
                            }
                        {% endstyle %}
                        <div class="sys-simple_text--description-wrapper">
                            <div class="block-{{ block.id }}-sys-simple_text--description-item description description-seo">
                                {{ block.settings.description }}
                            </div>
                        </div>
                    {% endif %}
                {% when 'button' %}
                    {% style %} 
                        #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .sys-simple_text--button-wrapper .block-{{ block.id }}-sys-text-button-banner {
                        color: {{ block.settings.color_text_button }};
                        font-size: {{ block.settings.font_size_button_mb }}px;
                    }    
                    @media (min-width: 768px) {
                        #shopify-section-{{ section.id }} .section-{{ section.id }}--sys-simple-text .sys-simple-text--content .sys-simple_text--button-wrapper .block-{{ block.id }}-sys-text-button-banner {
                            font-size: {{ block.settings.font_size_button }}px;
                        }
                    }
                    {% endstyle %}
                    <div class="sys-simple_text--button-wrapper">
                        <a
                            {% if block.settings.button_url == blank %}
                            role="link" aria-disabled="true"
                            {% else %}
                            href="{{ block.settings.button_url }}"
                            {% endif %}
                            class="block-{{ block.id }}-sys-text-button-banner"
                        >
                            {{- block.settings.button_label | escape -}}
                        </a>
                    </div>
            {% endcase %}
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "t:sections.simple-text.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "t:sections.simple-text.settings.desktop_pos.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.simple-text.settings.desktop_pos.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.simple-text.settings.desktop_pos.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.simple-text.settings.desktop_pos.label",
      "info": "t:sections.simple-text.settings.desktop_pos.infor"
    },
    {
        "type": "color",
        "id": "color_bg",
        "label": "t:sections.simple-text.settings.custom_color_bg",
        "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "t:sections.simple-text.settings.section_padding.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.simple-text.settings.section_padding.settings.top_padding_des",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.simple-text.settings.section_padding.settings.bottom_padding_des",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_top_mob",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.simple-text.settings.section_padding.settings.top_padding_mobile",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mob",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.simple-text.settings.section_padding.settings.bottom_padding_mobile",
      "default": 52
    }
  ],
  "blocks": [
    {
        "type": "heading",
        "name": "t:sections.simple-text.blocks.title.name",
        "limit": 1,
        "settings": [
            {
                "type": "richtext",
                "id": "heading",
                "label": "t:sections.simple-text.blocks.title.settings.heading_label"
            },
            {
                "type": "color",
                "id": "color_text_title",
                "label": "t:sections.simple-text.blocks.title.settings.custom_color_title_label",
                "default": "#000000"
            },
            {
                "type": "range",
                "id": "font_size_title",
                "label": "t:sections.simple-text.blocks.title.settings.font_size_title.desktop.label",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 28,
                "unit": "px"
            },
            {
                "type": "range",
                "id": "font_size_title_mb",
                "label": "t:sections.simple-text.blocks.title.settings.font_size_title.mobile.label",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 22,
                "unit": "px"
            }
        ]
    },
    {
        "type": "subtitle",
        "name": "Sub title",
        "limit": 1,
        "settings": [
            {
                "type": "richtext",
                "id": "subtitle",
                "label": "Subtitle"
            },
            {
                "type": "color",
                "id": "color_text_subtitle",
                "label": "Custom color text subtitle",
                "default": "#000000"
            },
            {
                "type": "range",
                "id": "font_size_subtitle",
                "label": "Font size sub title",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 28,
                "unit": "px"
            },
            {
                "type": "range",
                "id": "font_size_subtitle_mb",
                "label": "Font size sub title on mobile",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 22,
                "unit": "px"
            }
        ]
    },
    {
        "type": "description",
        "name": "t:sections.simple-text.blocks.description.name",
        "settings": [
            {
                "type": "richtext",
                "id": "description",
                "label": "t:sections.simple-text.blocks.description.settings.des.label"
            },
            {
                "type": "color",
                "id": "color_text_content",
                "label": "t:sections.simple-text.blocks.description.settings.color.label",
                "default": "#000000"
            },
            {
                "type": "range",
                "id": "font_size_content",
                "label": "t:sections.simple-text.blocks.description.settings.font_size_content.desktop.label",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 28,
                "unit": "px"
            },
            {
                "type": "range",
                "id": "font_size_content_mb",
                "label": "t:sections.simple-text.blocks.description.settings.font_size_content.mobile.label",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 22,
                "unit": "px"
            }
        ]
    },
    {
        "type": "button",
        "name": "t:sections.simple-text.blocks.button.name",
        "limit": 3,
        "settings": [
            {
                "type": "url",
                "id": "button_url",
                "label": "t:sections.simple-text.blocks.button.settings.url_label"
            },
            {
                "type": "text",
                "id": "button_label",
                "label": "t:sections.simple-text.blocks.button.settings.button_label"
            },
            {
                "type": "range",
                "id": "font_size_button",
                "label": "t:sections.simple-text.blocks.button.settings.font_size_button.desktop.label",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 28,
                "unit": "px"
            },
            {
                "type": "range",
                "id": "font_size_button_mb",
                "label": "t:sections.simple-text.blocks.button.settings.font_size_button.mobile.label",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 22,
                "unit": "px"
            },
            {
                "type": "color",
                "id": "color_text_button",
                "label": "t:sections.simple-text.blocks.button.settings.custom_color_text",
                "default": "#000000"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.simple-text.presets.name"
    }
  ]
}
{% endschema %}
